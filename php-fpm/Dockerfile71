#
#--------------------------------------------------------------------------
# Image Setup
#--------------------------------------------------------------------------
#

FROM leoqin/php71-fpm-base

MAINTAINER Leo Qin

# update timezone
ARG TIMEZONE=Asia/Shanghai
RUN /bin/cp /usr/share/zoneinfo/${TIMEZONE} /etc/localtime \
	&& echo "${TIMEZONE}" > /etc/timezone;
	
WORKDIR /var/www

EXPOSE 9000
CMD ["php-fpm"]